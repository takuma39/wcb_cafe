<ul>
	<li><%= link_to "新規投稿", new_admins_news_path %></li>
	<li><%= link_to "一覧", admins_news_index_path %></li>
</ul>

<% @news.each do |i|%>
	<%= i.id %>
	<%= i.day %>
	<%= i.title %>
	<%= i.category %>
	<%= i.content %>
	<%= i.sub_title %>
	<%= i.sub_content %>
<% end %>

<div id="news" class="big-bg"><!-- ------------------------------- -->
	<header class="page-header wrapper">
		<h1><%= link_to image_tag("/assets/logo.svg", alt: "WCBカフェホーム", class: "logo"), root_path %></h1>
		<nav>
			<ul class="main-nav">
				<li><%= link_to "News", news_index_path  %></li>
				<li><%= link_to "Menu", menus_path  %></li>
				<li><%= link_to "Contact", contacts_path  %></li>
			</ul>
		</nav>
	</header>

	<div class="wrapper">
		<h2 class="page-title">News</h2>
	</div> <!-- wrapper -->
</div><!-- home--------------------------------------------------- -->

<% @news.each do |i|%>
<div class="news-contents wrapper"><!-- -------------------------- -->

	<article> <!-- ----------------------------------------------- -->
		<header class="post-info">
			<h2 class="post-title"><%= i.title %></h2>
			<p class="post-data"><%= i.day.strftime("%-m/%-d") %> <span><%= i.day.strftime("%Y") %></span></p>
			<p class="post-cat">カテゴリー：<%= i.category %></p>
		</header>
		<%= attachment_image_tag i, :news_image, :fill, 550, 400, format: 'jpg' %>
		<%= i.content %>
	</article> <!-- ----------------------------------------------- -->

	<aside> <!-- ----------------------------------------------- -->
		<ul class="sub-menu">
			<li><a href="#">お店の紹介</a></li>
			<li><a href="#">期間限定メニュー</a></li>
			<li><a href="#">イベント</a></li>
			<li><a href="#">お客様との会話</a></li>
		</ul>

		<h3 class="sub-title"><%= i.sub_title %></h3>
		<p>
			<%= i.sub_content %>
		</p>
	</aside> <!-- ----------------------------------------------- -->

	<div class="ad">
		<img src="/assets/banner.jpg" alt="新メニュー登場">
	</div>

</div><!-- news-contents----------------------------------------- -->
<% end %>







